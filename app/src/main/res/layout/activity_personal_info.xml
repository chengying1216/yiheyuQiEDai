<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_personal_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e9e8e8"
    tools:context="com.yiheyu.qiedai.view.activity.my.PersonalInfoActivity">



    <RelativeLayout
        android:background="#1B82D1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/btn_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/btn_back" />

        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="个人信息"
            android:textColor="#FFFFFF"
            android:textSize="20sp"/>
    </RelativeLayout>




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:layout_marginTop="10dp"
                android:background="#ffffff"
                android:id="@+id/rl_info_name"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="头像"
                    android:textSize="15sp"/>

                <ImageView
                    android:id="@+id/imageview1"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/go" />

                <ImageView
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/avatar"
                    android:layout_alignRight="@+id/imageview1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4" />

            </RelativeLayout>

            <View
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d4d1d1"/>
            <RelativeLayout
                android:background="#ffffff"
                android:id="@+id/rl_info_avatar"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名"
                    android:textSize="15sp"/>

                <ImageView
                    android:id="@+id/iv_name"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/go" />

                <TextView
                    android:id="@+id/tv_info_name"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true"
                    android:text="点击编辑"
                    android:layout_alignRight="@+id/iv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            </RelativeLayout>
            <View
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d4d1d1"/>

            <RelativeLayout
                android:background="#ffffff"
                android:id="@+id/rl_info_sex"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="性别"
                    android:textSize="15sp"/>

                <ImageView
                    android:id="@+id/iv_sex"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/go" />

                <TextView
                    android:id="@+id/tv_info_sex"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true"
                    android:text="女"
                    android:layout_alignRight="@+id/iv_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            </RelativeLayout>


            <View
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d4d1d1"/>

            <RelativeLayout
                android:background="#ffffff"
                android:id="@+id/rl_info_smarital_statu"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="婚姻状况"
                    android:textSize="15sp"/>

                <ImageView
                    android:id="@+id/iv_smarital_statu"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/go" />

                <TextView
                    android:id="@+id/tv_info_smarital_statu"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true"
                    android:text="未婚"
                    android:layout_alignRight="@+id/iv_smarital_statu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            </RelativeLayout>


            <View
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d4d1d1"/>

            <RelativeLayout
                android:background="#ffffff"
                android:id="@+id/rl_info_age"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_age"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/go" />

                <TextView
                    android:id="@+id/tv_info_age"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true"
                    android:text="24"
                    android:layout_alignRight="@+id/iv_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:layout_marginLeft="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="年龄"
                    android:textSize="15sp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="18dp"
                    android:id="@+id/textView8" />

            </RelativeLayout>



            <View
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d4d1d1"/>

            <RelativeLayout
                android:background="#ffffff"
                android:id="@+id/rl_info_phone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手机号码"
                    android:textSize="15sp"/>

                <ImageView
                    android:id="@+id/imageview6"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                     />

                <TextView
                    android:id="@+id/tv_info_phone"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true"
                    android:text="15629037629"
                    android:layout_alignRight="@+id/imageview6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            </RelativeLayout>
            <View
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d4d1d1"/>

            <RelativeLayout
                android:background="#ffffff"
                android:id="@+id/rl_info_id"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID号码"
                    android:textSize="15sp"/>

                <ImageView
                    android:id="@+id/imageview7"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                   />

                <TextView
                    android:id="@+id/tv_info_id"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true"
                    android:text="00000001"
                    android:layout_alignRight="@+id/imageview7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            </RelativeLayout>



            <RelativeLayout
                android:layout_marginTop="10dp"
                android:background="#ffffff"
                android:id="@+id/rl_info_company"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="公司名称"
                    android:textSize="15sp"/>

                <ImageView
                    android:id="@+id/iv_company"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/go" />

                <TextView
                    android:id="@+id/tv_info_company"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true"
                    android:text="武汉一合鱼信息技术有限公司"
                    android:layout_alignRight="@+id/iv_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            </RelativeLayout>
            <View
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d4d1d1"/>

            <RelativeLayout
                android:background="#ffffff"
                android:id="@+id/rl_info_address"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="公司地址"
                    android:textSize="15sp"/>

                <ImageView
                    android:id="@+id/iv_address"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/go" />

                <TextView
                    android:id="@+id/tv_info_address"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true"
                    android:text="武汉市洪山区光谷软件园E栋104"
                    android:layout_alignRight="@+id/iv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            </RelativeLayout>
            <View
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d4d1d1"/>

            <RelativeLayout
                android:background="#ffffff"
                android:id="@+id/rl_info_business"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="主营业务"
                    android:textSize="15sp"/>

                <ImageView
                    android:id="@+id/iv_business"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/go" />

                <TextView
                    android:id="@+id/tv_info_business"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true"
                    android:text="点击编辑"
                    android:layout_alignRight="@+id/iv_business"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            </RelativeLayout>
            <View
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d4d1d1"/>

            <RelativeLayout
                android:background="#ffffff"
                android:id="@+id/rl_info_working_time"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="从业时间"
                    android:textSize="15sp"/>

                <ImageView
                    android:id="@+id/iv_working_time"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/go" />

                <TextView
                    android:id="@+id/tv_info_working_time"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true"
                    android:text="1年"
                    android:layout_alignRight="@+id/iv_working_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            </RelativeLayout>
            <View
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d4d1d1"/>



                <EditText
                    android:gravity="top"
                    android:hint="个人简介"
                    android:layout_marginTop="10dp"
                    android:background="#ffffff"
                    android:id="@+id/et_info_self_introduction"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_centerVertical="true"
                    android:textSize="15sp"/>


        </LinearLayout>

    </ScrollView>












</LinearLayout>
